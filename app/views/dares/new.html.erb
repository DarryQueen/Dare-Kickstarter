<%= render 'errors' %>

<%= form_for :dare, url: dares_path, html: { class: "form-horizontal", role: "form" } do |f| %>
  <div class="form-group<%= ' has-error' if @dare.errors[:title].any? %>">
    <%= f.label :title, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :title, placeholder: 'Name of dare.', class: 'form-control' %>
    </div>
  </div>
 
  <div class="form-group<%= ' has-error' if @dare.errors[:description].any? %>">
    <%= f.label :description, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :description, placeholder: 'Give a short description.', class: 'form-control', rows: '5', style: 'resize:none;' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Submit', :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
